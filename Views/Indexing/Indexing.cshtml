        </select>
        <div style="display:flex; align-items:center; align-content:center">
            <ul style="list-style-type:none">
                <li>
                    <input type="checkbox" name="tok" /><label> Tokenization&nbsp;&nbsp;&nbsp;</label>
                </li>
                <li>
                    <input type="checkbox" /><label> Normalization</label>
                </li>
                <li>
                    <input type="checkbox" value="s" /><label> Stemming&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                </li>
                <li>
                    <input type="checkbox" /><label> Lemetization&nbsp;&nbsp;</label>
                </li>
                <li>
                    <input type="checkbox" /><label> Stop Words&nbsp;&nbsp;&nbsp;</label>
                </li>
            </ul>

        </div>

    </div>
</form>